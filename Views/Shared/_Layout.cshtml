<!DOCTYPE html>
<html>
<head>
<meta http-equiv="Content-Type" content="text/html; charset=utf-8"/>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<meta http-equiv="Content-Type" content="text/html; charset=utf-8"/>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("OSP", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Projects", "Index", "Project", new { area = "" }, null)</li>
                    <li>@Html.ActionLink("Students", "Index", "Student", new { area = "" }, null)</li>
                    <li>@Html.ActionLink("Groups", "Index", "Group", new { area = "" }, null)</li>
                    <li>@Html.ActionLink("Tasks", "Index", "Task", new { area = "" }, null)</li>
                    <li>@Html.ActionLink("Steps", "Index", "Step", new { area = "" }, null)</li>
                    <li>@Html.ActionLink("Teachers", "Index", "Teacher", new { area = "" }, null)</li>
                    <li>@Html.ActionLink("Help", "Index", "Help", new { area = "" }, null)</li>
					<li>@Html.ActionLink("Sign Out", "SignOut", "Login", new { area = "" }, null)</li>
                    <li style="top:12px; left:300px;">@using (Html.BeginForm("Index", "Project", FormMethod.Get)){@Html.TextBox("SearchString")<input type = "submit" value = "Search" />}</li>
					
				</ul>
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer style="position:fixed;bottom:0;">
            <p>&copy; @DateTime.Now.Year - JBProjet2 - OSP</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
